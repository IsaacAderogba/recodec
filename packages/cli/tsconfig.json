{
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "target": "es2016",
    "module": "commonjs",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "composite": true,
    "jsx": "react-jsx"
  },
  "exclude": ["node-Modules", "dist", "playground"]
}
